<Window x:Class="Projekat18.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat18.View"
        mc:Ignorable="d"
        Title="UserView" Height="450" Width="800">
    <Grid>
        <!-- Dugmad za promenu prikaza -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Content="Baze" Command="{Binding ShowDatabaseViewCommand}" Margin="5"/>
            <Button Content="Tabele" Command="{Binding ShowTableViewCommand}" Margin="5"/>
            <!-- Dodaj druga dugmad za ostale UserControl-e -->
        </StackPanel>
        <!-- Prikaz aktivnog UserControl-a -->
        <ContentControl Content="{Binding CurrentView}" Margin="0,40,0,0"/>
    </Grid>
</Window>
